{
  "name": "design-system-mcp",
  "packageManager": "yarn@4.6.0",
  "bin": "./dist/main.js",
  "scripts": {
    "build": "yarn clean && tsc -p tsconfig.build.json && yarn build:shebang",
    "build:shebang": "echo '#!/usr/bin/env node' | cat - dist/main.js > temp && mv temp dist/main.js && chmod +x dist/main.js",
    "clean": "rm -rf dist",
    "dev": "tsx src/main.ts",
    "serve": "tsx src/main.ts serve",
    "serve:prod": "node dist/main.js serve",
    "start": "yarn serve",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.10.1",
    "bun": "^1.3.2",
    "dotenv": "^17.2.3",
    "easy-cli-framework": "^1.2.0",
    "glob": "^11.0.3",
    "openai": "^6.8.1",
    "ora": "^9.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/ora": "^3.2.0",
    "bun-types": "^1.3.2"
  }
}
